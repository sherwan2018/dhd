<!-- NEW post -->

<div id="yo" class="row text-center">

   <!-- newpost -->
   <%news.forEach(function(news){%>
  <div class="col-lg-12 col-md-12 col-sm-12">

    <img src="<%= news.image%>" class="img-fluid img-thumbnail" alt="Responsive image">
    <h3 style="padding:0.3em 0;"><%= news.headline %></h3>
    <p style="height:100px;overflow:hidden;" >
      <%=news.description %>
       
    </p>

          <p>
              <a href = "/news/<%= news._id %>" class="btn btn-primary"  style="display: inline;">More Info</a>
              <%if(currentUser && currentUser.isAdmin){ %>
              <form style="display: inline" class="text-right" action="/fool/<%= news._id %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">DELETE</button>
             
              </form>

              <%}%>

          </p>

  </div>

  <% });%>

  </div>


   <!-- side rekalm -->

  <div id="yo2" class="row text-center">
    <h2 style="text-align:center">Reklam</h2>
    <%reklam.forEach(function(reklam){%>
  <div class="col-lg-12 col-md-12 col-sm-12">

    <img src="<%=reklam.image2%>" class="img-fluid img-thumbnail">
    <p><%= reklam.description2 %>
      <%if(currentUser && currentUser.isAdmin){ %>
        <form style="display: inline" class="text-right" action="/news/<%= reklam._id %>/reklam?_method=DELETE" method="POST">
          <button class="btn btn-xs btn-danger">DELETE</button>
       
        </form>

        <%}%>
    
    </p>


  </div>
  <% });%>

  </div>






</div>







</div>






