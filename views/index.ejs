<div class="container">

  <!-- SLIDER -->

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
<ol class="carousel-indicators">
  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
  <li data-target="#carouselExampleIndicators" data-slide-to="1" ></li>
  <li data-target="#carouselExampleIndicators" data-slide-to="2" ></li>
</ol>
<div class="carousel-inner">

    <div class="carousel-item active">

        <img class="d-block w-100" src="https://images.pexels.com/photos/1934259/pexels-photo-1934259.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
    
          <div class="backhead">
            <p>this slider must be here</p>
    
           </div>
            <div class="backhead2">
              <p>this slider stays static for sake of bootstrap carousel</p>
 
            </div>
    
        </div>
    
      </div>







<% slider.forEach(function(slider){ %>
  <div class="carousel-item ">

    <img class="d-block w-100" src="<%=slider.image3%>" alt="First slide">
    <div class="carousel-caption d-none d-md-block">

      <div class="backhead">
        <p><%=slider.headline2 %></p>

       </div>
        <div class="backhead2">
          <p><%= slider.description3 %></p>
          <%if(currentUser && currentUser.isAdmin){ %>
            <form style="display: inline" class="text-right" action="/news/<%= slider._id %>?_method=DELETE" method="POST">
              <button class="btn btn-xs btn-danger">DELETE</button>
           
            </form>
    
            <%}%>

        </div>

    </div>

  </div>

<%});%>
</div>

<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>

</div>

