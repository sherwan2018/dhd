<%include partials/header%>




<div class="container">

  <!-- SLIDER -->

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
<ol class="carousel-indicators">
  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
</ol>

<div class="carousel-inner">
    

     <div class="carousel-item active">

      <img class="d-block w-100" src="https://images.pexels.com/photos/863988/pexels-photo-863988.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="First slide">
      <div class="carousel-caption d-none d-md-block">

        <div class="backhead">
          <p>DHD Online</p>

         </div>
          <div class="backhead2">
            <p>Sport section news</p>

          </div>

      </div>

    </div>
     






  <% Sslider.forEach(function(Sslider){ %>
    <div class="carousel-item ">

      <img class="d-block w-100" src="<%=Sslider.Simage%>" alt="First slide">
      <div class="carousel-caption d-none d-md-block">

        <div class="backhead">
          <p><%= Sslider.Sheadline %></p>

         </div>
          <div class="backhead2">
            <p><%= Sslider.Sdescription%></p>
            <%if(currentUser && currentUser.isAdmin){ %>
              <form style="display: inline" class="text-right" action="/sport/<%= Sslider._id %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">DELETE</button>
             
              </form>
      
              <%}%>

          </div>

      </div>

    </div>

  <%});%>

</div>
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>



<!-- //showing the button for the admin to post -->

<%if(currentUser && currentUser.isAdmin){ %>
<div class="add-new" style="text-align:center;">


<p  style="display:inline;">
    <a href ="/new-SportSlider" class="btn btn-primary">Add a new slider</a>
</p>
<p  style="display:inline">
    <a href = "/new-SportNews" class="btn btn-primary">Add a new post</a>
</p>
<p  style="display:inline">
    <a href = "/reklam/new" class="btn btn-primary">Add a new reklam</a>
</p>
</div>

<%}%>



<!-- NEW post -->

<div  id="yo" class="row text-center">

   <!-- newpost -->
   <% sportNews.forEach(function(sportNews){%>
  <div class="col-lg-12 col-md-12 col-sm-12">

    <img src="<%= sportNews.Simage2%>" class="img-fluid img-thumbnail" alt="Responsive image">
    <h3 style="padding:0.3em 0;"><%= sportNews.Sheadline2 %></h3>
    <p>
      <p style="height:100px;overflow:hidden;" >
        <%=sportNews.Sdescription2 %>
         
      </p>
    </p>
    
          <p>
              <a href = "/sport/<%=sportNews._id%>" class="btn btn-primary" >More Info</a>
              <%if(currentUser && currentUser.isAdmin){ %>
                <form style="display: inline" class="text-right" action="/sport/<%= sportNews._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-xs btn-danger">DELETE</button>
               
                </form>
  
                <%}%>
  
          </p>

  </div>
  <%});%>


  </div>


   <!-- side rekalm -->

  <div id="yo2" class="row text-center">
    <h2 style="text-align:center">Reklam</h2>
    <%reklam.forEach(function(reklam){%>
  <div class="col-lg-12 col-md-12 col-sm-12">

    <img src="<%=reklam.image2%>" class="img-fluid img-thumbnail">
    <p><%= reklam.description2 %></p>

    <%if(currentUser && currentUser.isAdmin){ %>
      <form style="display: inline" class="text-right" action="/sport/<%= reklam._id %>/reklam?_method=DELETE" method="POST">
        <button class="btn btn-xs btn-danger">DELETE</button>
     
      </form>

      <%}%>


  </div>
  <% });%>

  </div>






</div>







</div>






<%include partials/footer%>
